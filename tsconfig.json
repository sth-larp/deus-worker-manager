{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["ES2017", "DOM"],
        "module": "commonjs",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "./build",
        "typeRoots": [
            "./vendor",
            "./node_modules/@types"
        ]
    },
    "include": ["./src/**/*.ts", "./bin/*.ts"]
}
